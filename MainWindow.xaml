<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Height="450"
        Width="800">
    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Image Source="/Image/aedis.png" />


        </Grid>

        <StackPanel Grid.Row="0"
                Grid.ColumnSpan="2"
                Background="#505abb">
            <Button Content="{materialDesign:PackIcon Kind=Close}"
                    Foreground="White"
                    HorizontalAlignment="Right"
                    Width="66"
                    x:Name="BtnClose"
                    Click="BtnClose_Click"
                    Style="{StaticResource MaterialDesignIconButton}" 
                    RenderTransformOrigin="0.516,-1.398" 
                    Height="27"/>


        </StackPanel>
        <StackPanel Grid.Row="0"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="AEGIS GYM" 
                       Foreground="White" 
                       TextWrapping="Wrap"
                       FontSize="20"
                       />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="0" 
                    Margin="51,30,30,0">
            <TextBlock Text="Войти в систему" 
                       FontSize="20" 
                       Margin="0 0 0 20"
                       Foreground="#505abb"
                       HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 0">
                <materialDesign:PackIcon Kind="Account"
                                         Margin="0 0 5 0"
                                         Height="20" 
                                         Width="20"
                                         VerticalAlignment="Center"
                                         Foreground="#505abb"/>
                <TextBox Width="183"
                         FontSize="15"
                         x:Name="TbLogin"
                         Foreground="#505abb"
                         materialDesign:TextFieldAssist.UnderlineBrush="#505abb"
                         materialDesign:HintAssist.Hint="Введите логин"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.HelperText="Не менее 8 символов"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 25 0 0"
                        >
                <materialDesign:PackIcon Kind="Settings"
                                         Margin="0 3 3 0"
                                         Width="20"
                                         Height="20"
                                         Foreground="{Binding Foreground, ElementName=TbLogin}"/>
                <PasswordBox Width="183"
                             FontSize="15"
                             x:Name="PbPassword"
                             Foreground="#505abb"
                             materialDesign:TextFieldAssist.UnderlineBrush="#505abb"
                             materialDesign:HintAssist.Hint="Введите пароль"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.HelperText="Не менее 8 символов"/>
            </StackPanel>

            <StackPanel Margin="0 30 0 0">
                <Button Background="#505abb"
                        x:Name="BtnLogin"
                        Click="BtnLogin_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        Width="240">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check"
                                                 Margin="0 0 3 0"
                                                 Foreground="White"/>
                        <TextBlock Text="Войти"
                                   Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1"
            Margin="15,238,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" Height="159">
            <StackPanel Orientation="Horizontal">
                <Separator Background="#505abb"
                           Height="5"
                           Width="70"/>
                <TextBlock Text="Или войти через"
                           Margin="5 0 5 0"
                           Foreground="Gray"/>
                <Separator Background="#505abb"
                           Height="5"
                           Width="70"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 40"
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                <Button Margin="0 0 5 0"
                        Background="#505ABB"
                        Foreground="White"
                        x:Name="BtnAdminInfo"
                        Click="BtnAdminInfo_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        Content="{materialDesign:PackIcon Kind=Mail}"/>

                <Button Margin="0 0 5 0"
                        Content="{materialDesign:PackIcon Kind=EmojiHappy}"
                        Background="#505ABB"
                        Foreground="White"
                        x:Name="BtnDevInfo"
                        Click="BtnDevInfo_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"/>

                <Button Content="{materialDesign:PackIcon Kind=BlockChain}"
                        Background="#505ABB"
                        Foreground="White"
                        x:Name="BtnUserInfo"
                        Click="BtnUserInfo_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"/>
                <Button Content="{materialDesign:PackIcon Kind=Clear}"
                        Background="#505ABB"
                        Margin="5 0 0 0"
                        Foreground="White"
                        x:Name="BtnClear"
                        Click="BtnClear_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
